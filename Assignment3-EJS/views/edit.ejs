<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update perfume</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css">
    <link rel="stylesheet" href="/stylesheets/styles.css">
</head>

<body>
    <section class="section">
        <div class="container">
            <h1 class="title">Edit Perfume</h1>
            <form action="/perfumes/<%= perfume._id %>" method="POST">
                <div class="field">
                    <label class="label" for="perfumeName">Name</label>
                    <div class="control">
                        <input class="input" type="text" id="perfumeName" name="perfumeName"
                            value="<%= perfume.perfumeName %>" required>
                    </div>
                </div>

                <div class="field">
                    <label class="label" for="uri">Image URI</label>
                    <div class="control">
                        <input class="input" type="text" id="uri" name="uri" value="<%= perfume.uri %>" required>
                    </div>
                </div>

                <div class="field">
                    <label class="label" for="price">Price</label>
                    <div class="control">
                        <input class="input" type="number" id="price" name="price" value="<%= perfume.price %>"
                            required>
                    </div>
                </div>

                <div class="field">
                    <label class="label" for="concentration">Concentration</label>
                    <div class="control">
                        <input class="input" type="text" id="concentration" name="concentration"
                            value="<%= perfume.concentration %>" required>
                    </div>
                </div>

                <div class="field">
                    <label class="label" for="description">Description</label>
                    <div class="control">
                        <textarea class="textarea" id="description" name="description"
                            required><%= perfume.description %></textarea>
                    </div>
                </div>

                <div class="field">
                    <label class="label" for="ingredients">Ingredients</label>
                    <div class="control">
                        <textarea class="textarea" id="ingredients" name="ingredients"
                            required><%= perfume.ingredients %></textarea>
                    </div>
                </div>

                <div class="field">
                    <label class="label" for="volume">Volume</label>
                    <div class="control">
                        <input class="input" type="number" id="volume" name="volume" value="<%= perfume.volume %>"
                            required>
                    </div>
                </div>

                <div class="field">
                    <label class="label" for="targetAudience">Target Audience</label>
                    <div class="control">
                        <input class="input" type="text" id="targetAudience" name="targetAudience"
                            value="<%= perfume.targetAudience %>" required>
                    </div>
                </div>

                <div class="field">
                    <label class="label" for="brand">Brand</label>
                    <div class="control">
                        <div class="select">
                            <select id="brand" name="brand" required>
                                <% brands.forEach(function(brand) { %>
                                    <option value="<%= brand._id %>" <%=perfume.brand.equals(brand._id) ? 'selected'
                                        : '' %>><%= brand.brandName %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="control">
                    <button class="button is-primary" type="submit">Update Perfume</button>
                </div>
            </form>
        </div>
    </section>
</body>

</html>